<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="isMandatory" format="boolean" />
    <attr name="titleHint" format="string" />
    <attr name="onlyNumbers" format="boolean" />
    <attr name="charsWithBlankSpaces" format="boolean" />
    <attr name="hintText" format="string" />
    <attr name="spinnerHeight" format="dimension" />

    <declare-styleable name="CustomEditText" parent="BaseCustomView">
        <attr name="onlyNumbers" />
        <attr name="charsWithBlankSpaces" />
        <attr name="isMandatory" />
    </declare-styleable>

    <declare-styleable name="TitleEditText" parent="BaseCustomView">
        <attr name="onlyNumbers" />
        <attr name="charsWithBlankSpaces" />
        <attr name="isMandatory" />
        <attr name="titleHint" />
    </declare-styleable>

    <declare-styleable name="TextArea" parent="BaseCustomView">
        <attr name="isMandatory" />
    </declare-styleable>

    <declare-styleable name="TitleTextArea" parent="BaseCustomView">
        <attr name="isMandatory" />
        <attr name="titleHint" />
    </declare-styleable>

    <declare-styleable name="CustomSpinner" parent="BaseCustomView">
        <attr name="titleHint" />
        <attr name="isMandatory" />
        <attr name="spinnerHeight" />
    </declare-styleable>

    <declare-styleable name="TitleSpinner" parent="BaseCustomView">
        <attr name="titleHint"/>
        <attr name="hintText" />
        <attr name="spinnerHeight" />
    </declare-styleable>

    <declare-styleable name="SearchableSpinner" parent="BaseCustomView">
        <attr name="isMandatory" />
        <attr name="spinnerHeight" />
    </declare-styleable>

    <declare-styleable name="TitleSearchableSpinner" parent="BaseCustomView">
        <attr name="titleHint" />
        <attr name="isMandatory" />
        <attr name="hintText" />
        <attr name="spinnerHeight" />
    </declare-styleable>

</resources>