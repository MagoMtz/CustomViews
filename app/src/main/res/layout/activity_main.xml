<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mago.customviewsapp.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ly_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <com.mago.customviews.views.edittext.SingleDate
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Fecha"
                app:isMandatory="true"
                />

            <com.mago.customviews.views.title.TitleEditText
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:allChars="true"
                app:title="Titulo"
                app:isMandatory="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

            <com.mago.customviews.views.title.TitleZipCodeEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="zip code"
                app:isMandatory="true"
                />
            <com.mago.customviews.views.title.TitleEmailEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="email"
                app:isMandatory="true"
                />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>